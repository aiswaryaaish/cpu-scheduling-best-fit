#include<stdio.h>
void main(){
    int bno,pno,b[10],p[10],i,j,min=9999,occ_by[10]; 
    for(i=0;i<10;i++){
        occ_by[i]=-1;
    }
    printf("enter no.of processes : ");
    scanf("%d",&pno);
    printf("\nenter size of each process : ");
    for(i=0;i<pno;i++){
        scanf("%d",&p[i]);
    }
    printf("\nenter no..of memory blocks : ");
    scanf("%d",&bno);
    printf("\nenter sizes of each blocks : ");
    for(i=0;i<pno;i++){
        scanf("%d",&b[i]);
    }
    for(i=0;i<pno;i++){
        min=9999;
        for(j=0;j<bno;j++){
            if(b[j]>=p[i] && b[j]<min){
                min=j;
            }
        }
        if(min!=9999){
            occ_by[i]=min;
            b[min]-=p[i];
        }
    }
    for(i=0;i<pno;i++){
        if(occ_by[i]!=-1){
            printf("\nprocess %d is allocated at block %d ",i+1,occ_by[i]+1);
        }
        else{
            printf("\ninsufficient memory");
        }
    }
}
